{
  "compilerOptions": {
    "allowJs": true,               // JS/JSX ko allow karega
    "checkJs": false,               // JS files me type checking off
    "jsx": "react-jsx",             // React 17+ JSX transform
    "esModuleInterop": true,
    "skipLibCheck": true,           // Type checking fast banata hai
    "forceConsistentCasingInFileNames": true,
    "strict": false                 // Strict mode off (optional)
  },
  "include": [
    "src/**/*"
  ]
}
